{{#if askNewQuestion}}
  <form>
    <div class="form-group">
      <label for="author">Your Name</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="content">Your Question</label>
      {{input value=content id="content"}}
    </div>
    <div class="form-group">
      <label for="notes">Additional Notes</label>
      {{input value=notes id="notes"}}
    </div>
    <button {{action 'saveQuestion'}} class="btn">Submit</button>
  </form>
{{else}}
  <button {{action 'questionFormShow'}} class="btn">Ask a Question</button>
{{/if}}
