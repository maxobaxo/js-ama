{{#if askNewQuestion}}
  <form>
    <div class="form-group">
      <label for="author">Your Name</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="content">Your Question</label>
      {{input value=content id="content"}}
    </div>
    <button {{action 'saveQuestion'}}>Submit</button>
  </form>
{{else}}
  <button {{action 'questionFormShow'}}>Ask a Question</button>
{{/if}}
