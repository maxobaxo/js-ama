<h2>Specific Question: </h2>
<div class="well">
  <h3>{{model.author}} says: </h3>
  <h5>{{model.content}}</h5>
  <p><em>Note: {{model.notes}}</em></p>

  {{edit-question question=model update="update"}}
  {{question-detail question=model destroyQuestion="destroyQuestion"}}
</div>

<div class="well">
  <h3>Answers</h3>
  {{new-answer saveAnswer="saveAnswer" question=model}}
  <ul>
    {{#each model.answers as |answer|}}
    {{answer-tile answer=answer destroyAnswer="destroyAnswer"}}
    {{/each}}
  </ul>
</div>
